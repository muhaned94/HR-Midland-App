// db.js - الاتصال الفعلي بقاعدة بيانات PostgreSQL

const { Pool } = require('pg');
const dotenv = require('dotenv');

dotenv.config();

// إنشاء Pool (مجمع اتصال) باستخدام متغيرات البيئة
const pool = new Pool({
    // Render سيوفر متغير DB_HOST و DB_DATABASE و DB_USER تلقائياً
    user: process.env.DB_USER,
    host: process.env.DB_HOST,
    database: process.env.DB_DATABASE,
    password: process.env.DB_PASSWORD,
    port: process.env.DB_PORT,
    // إعداد SSL مطلوب لـ Render
    ssl: {
        rejectUnauthorized: false
    }
});

/**
 * دالة تنفيذ الاستعلامات
 * @param {string} text - عبارة SQL (باستخدام $1, $2)
 * @param {Array} params - المعاملات
 * @returns {Promise} - وعد بنتيجة الاستعلام بصيغة { rows }
 */
const query = async (text, params) => {
    try {
        console.log('QUERY:', text, params || '');
        const result = await pool.query(text, params);
        return result; // ترجع بالفعل { rows } في مكتبة pg
    } catch (error) {
        console.error('PostgreSQL Error:', error.message);
        throw error;
    }
};

module.exports = {
    query,
};